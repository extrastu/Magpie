{
  "name": "@magpie/api",
  "version": "1.0.0",
  "description": "Magpie backend API built with Hono.js",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:reset": "rm -f ../../data/magpie.db* && pnpm db:generate && pnpm db:migrate && pnpm db:seed",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@hono/node-server": "^1.8.2",
    "hono": "^4.0.8",
    "drizzle-orm": "^0.36.4",
    "better-sqlite3": "^12.2.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "cheerio": "^1.0.0-rc.12",
    "openai": "^4.28.0",
    "zod": "^3.22.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/better-sqlite3": "^7.6.8",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/cors": "^2.8.17",
    "drizzle-kit": "^0.28.1",
    "tsx": "^4.7.1",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2",
    "supertest": "^6.3.4",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^1.2.2"
  }
}