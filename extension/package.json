{
  "name": "@magpie/extension",
  "version": "1.0.0",
  "description": "Magpie Chrome Extension - Save interesting links with one click",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "npm run clean && vite build --mode production && npm run copy:manifest && npm run copy:icons",
    "build:dev": "npm run clean && vite build --mode development && npm run copy:manifest && npm run copy:icons",
    "build:full": "npm run generate:icons && npm run build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "clean": "rm -rf dist",
    "copy:manifest": "cp src/manifest.json dist/",
    "copy:icons": "cp -r icons dist/",
    "generate:icons": "node scripts/generate-icons.js"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.254",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "eslint": "^9.35.0",
    "postcss": "^8.4.35",
    "sharp": "^0.34.3",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-web-extension": "^4.1.3",
    "vitest": "^1.2.2"
  }
}